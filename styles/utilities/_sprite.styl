/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$arrow_left_name = 'arrow-left';
$arrow_left_x = 0px;
$arrow_left_y = 0px;
$arrow_left_offset_x = 0px;
$arrow_left_offset_y = 0px;
$arrow_left_width = 45px;
$arrow_left_height = 120px;
$arrow_left_total_width = 107px;
$arrow_left_total_height = 120px;
$arrow_left_image = '../images/sprite.png';
$arrow_left = 0px 0px 0px 0px 45px 120px 107px 120px '../images/sprite.png' 'arrow-left';
$arrow_right_name = 'arrow-right';
$arrow_right_x = 49px;
$arrow_right_y = 0px;
$arrow_right_offset_x = -49px;
$arrow_right_offset_y = 0px;
$arrow_right_width = 45px;
$arrow_right_height = 120px;
$arrow_right_total_width = 107px;
$arrow_right_total_height = 120px;
$arrow_right_image = '../images/sprite.png';
$arrow_right = 49px 0px -49px 0px 45px 120px 107px 120px '../images/sprite.png' 'arrow-right';
$nav_arrow_name = 'nav-arrow';
$nav_arrow_x = 98px;
$nav_arrow_y = 0px;
$nav_arrow_offset_x = -98px;
$nav_arrow_offset_y = 0px;
