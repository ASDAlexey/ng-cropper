//body
::-webkit-scrollbar
  width:6px
::-webkit-scrollbar-track
  background-color:#fff
  -webkit-box-shadow:inset 0 0 6px rgba(0, 0, 0, 0.2)
  tn(.5s)
::-webkit-scrollbar-track:hover
  -webkit-box-shadow:inset 0 0 6px rgba(0, 0, 0, 0.3)
::-webkit-scrollbar-thumb
  background-color:#facb0c
  border-radius:10px
  tn(.5s)
::-webkit-scrollbar-thumb:hover
  background-color:#facb0c
body
  scrollbar-base-color:#facb0c
  scrollbar-3dlight-color:#facb0c
  scrollbar-highlight-color:#facb0c
  scrollbar-track-color:#fff
  scrollbar-arrow-color:#facb0c
  scrollbar-shadow-color:#facb0c
  scrollbar-dark-shadow-color:#facb0c