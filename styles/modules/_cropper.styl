.img-container
  position: absolute;
  z-index: 0;
  left: 50%;
  top: 50%;
  width: 80%;
  height: 70%;
  transform: translate(-50%, -50%);

.list-images {
  text-align: left;
  font-size: 0;
}

.list-images li {
  display: inline-block;
  height: 150px;
  position: relative;
  z-index: 0;
  padding: 4px 4px 30px 4px;
  background-color: #fff;
  border: 1px solid #ddd;
}

.list-images li > div {
  position: absolute;
  z-index: 0;
  left: 0;
  width: 100%;
  height: 28px;
  bottom: 0;
}

.list-images li > div input[type="radio"] {
  padding-left: 4px;
  margin: 2px auto 0;
  display: block;
}

.list-images li > span:first-child {
  display: inline-block;
  vertical-align: top;
  position: absolute;
  z-index: 0;
  left: 0;
  top: 0;
  width: 100%;
  height: -moz-calc(100% - 28px);
  height: -webkit-calc(100% - 28px);
  height: calc(100% - 28px);
}

.list-images li img {
  max-width: 100%;
  max-height: 100%;
  margin-bottom: 15px;
  position: absolute;
  z-index: 0;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  display: block;
}

.list-images li span {
  display: block;
  cursor: pointer;
}

.list-images .delete-image
  display: inline-block;
  vertical-align: top;
  cursor: pointer;
  font-size: 14px;
  color: #000;
  text-align: center;
  min-width: 58px;
  height: 28px;
  background-color: #ccc;
  padding-top: 4px;
  text-decoration: none
  transition background .5s
  &:hover
    background-color: #f00

.alert-success .close {
  margin-top: 5px;
}

.radio-label {
  display: block;
  margin-left: 2px;
  vertical-align: top;
  font-size: 11px;
  margin-top: 0;
  white-space: nowrap;
  position: relative;
  z-index: 0;
}

.radio-label span {
  position: absolute;
  z-index: 1;
  left: 50%;
  top: 0;
  -webkit-transform: translate(-50%, 0);
  -moz-transform: translate(-50%, 0);
  -ms-transform: translate(-50%, 0);
  -o-transform: translate(-50%, 0);
  transform: translate(-50%, 0);
}

.form-group {
  after();
}

.cropper-canvas
  background-color: #fff

.wrapper-file
  position: relative
  z-index: 0
  label
    margin: 0
    padding: 5px 0
    cursor: pointer
    text-align: center
    display: block
    transition background .5s
    background-color: #5effb2
    &:hover
      background-color: #45ff28
  input[type="file"]
    visibility: hidden
    width: 100%
    height: 100%
    opacity: 0
    position: absolute
    z-index: 1
    left: 0
    top: 0